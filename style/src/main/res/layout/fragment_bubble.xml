<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="?android:selectableItemBackground"
            android:tint="#fff"
            android:padding="18dp"
            android:src="@drawable/ic_back"
            android:id="@+id/bt_back"
            android:layout_width="60dp"
            android:layout_height="?actionBarSize"
            android:contentDescription="@string/app_name" />
        <TextView
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:text="Bubble"
            android:layout_toEndOf="@+id/bt_back"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />
        <ImageView
            android:background="?selectableItemBackground"
            android:id="@+id/bt_reload_default"
            android:padding="16dp"
            android:src="@drawable/ic_reload_default"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="?actionBarSize" />
    </RelativeLayout>
    <com.colorsms.style.previews.ChatPreview
        android:id="@+id/chat_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            android:id="@+id/view_bubble_shape"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_bubble_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/view_bubble_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                app:cardElevation="8dp"
                android:id="@+id/view_bubble_shape_color_main"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/bt_bubble_received_shape_color"
                        android:background="?selectableItemBackground"
                        android:padding="10dp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginStart="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="Received"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <FrameLayout
                            android:background="@drawable/bg_gray"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/img_bubble_received_color"
                                android:background="@drawable/bg_oval"
                                android:layout_width="29dp"
                                android:layout_height="29dp"/>
                        </FrameLayout>

                    </LinearLayout>
                    <View
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="50dp"
                        android:background="@color/colorBubbleInboxDefault"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/bt_bubble_sent_shape_color"
                        android:padding="10dp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginStart="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Sent"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <FrameLayout
                            android:background="@drawable/bg_gray"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/img_bubble_sent_color"
                                android:background="@drawable/bg_oval"
                                android:layout_width="29dp"
                                android:layout_height="29dp"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                app:cardElevation="8dp"
                android:id="@+id/view_bubble_shape_color_select"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_bubble_color_title"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:textColor="#555"
                        android:textSize="16sp"
                        android:text="Select Bubble Color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/rcv_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.colorsms.style.views.colorpicker.ColorPickerView
                            android:layout_gravity="center"
                            android:id="@+id/color_picker_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cpv_alphaChannelVisible="true" />
                    </FrameLayout>
                    <LinearLayout
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textAllCaps="false"
                            android:id="@+id/bt_back_shape_color"
                            android:layout_gravity="end"
                            android:textColor="@color/colorPrimary"
                            android:text="Back"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:textAllCaps="false"
                            android:id="@+id/bt_custom_shape_color"
                            android:layout_gravity="end"
                            android:textColor="@color/colorPrimary"
                            android:text="Customize"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/view_text_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_gravity="bottom"
                app:cardElevation="8dp"
                android:id="@+id/view_text_color_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/bt_text_received_shape_color"
                        android:background="?selectableItemBackground"
                        android:padding="10dp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginStart="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="Received"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <FrameLayout
                            android:background="@drawable/bg_gray"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/img_text_received_color"
                                android:background="@drawable/bg_oval"
                                android:layout_width="29dp"
                                android:layout_height="29dp"/>
                        </FrameLayout>

                    </LinearLayout>
                    <View
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="50dp"
                        android:background="@color/colorBubbleInboxDefault"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/bt_text_sent_color"
                        android:padding="10dp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginStart="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Sent"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <FrameLayout
                            android:background="@drawable/bg_gray"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/img_text_sent_color"
                                android:background="@drawable/bg_oval"
                                android:layout_width="29dp"
                                android:layout_height="29dp"/>
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="bottom"
                android:visibility="gone"
                app:cardElevation="8dp"
                android:id="@+id/view_text_color_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_text_color_title"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:textColor="#555"
                        android:textSize="16sp"
                        android:text="Select Text Color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/rcv_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.colorsms.style.views.colorpicker.ColorPickerView
                            android:layout_gravity="center"
                            android:id="@+id/color_picker_view_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cpv_alphaChannelVisible="true" />
                    </FrameLayout>
                    <LinearLayout
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textAllCaps="false"
                            android:id="@+id/bt_back_text_color"
                            android:layout_gravity="end"
                            android:textColor="@color/colorPrimary"
                            android:text="Back"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:textAllCaps="false"
                            android:id="@+id/bt_custom_text_color"
                            android:layout_gravity="end"
                            android:textColor="@color/colorPrimary"
                            android:text="Customize"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:background="@color/colorBubbleInboxDefault"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_shape"
            android:textColor="@color/colorPrimary"
            android:background="?selectableItemBackground"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="Shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/bt_color"
            android:textColor="#B5A8A8A8"
            android:background="?selectableItemBackground"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="Color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/bt_text"
            android:textColor="#B5A8A8A8"
            android:background="?selectableItemBackground"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
