<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="?android:selectableItemBackground"
            android:tint="#fff"
            android:padding="18dp"
            android:src="@drawable/ic_back"
            android:id="@+id/bt_back"
            android:layout_width="60dp"
            android:layout_height="?actionBarSize"
            android:contentDescription="@string/app_name" />
        <TextView
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:text="Theme Color"
            android:layout_toEndOf="@+id/bt_back"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_above="@+id/cv"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="#555"
            android:textSize="18sp"
            android:text="Select Theme Color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            app:cardElevation="8dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/rcv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.colorsms.style.views.colorpicker.ColorPickerView
                        android:layout_gravity="center"
                        android:id="@+id/color_picker_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cpv_alphaChannelVisible="true" />
                </FrameLayout>
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/bt_custom_color"
                    android:layout_gravity="end"
                    android:textColor="@color/colorPrimary"
                    android:text="Customs"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>
