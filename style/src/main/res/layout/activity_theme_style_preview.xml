<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/tab_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginBottom="80dp"
                    android:layout_marginTop="?actionBarSize"
                    android:id="@+id/rcv_sms_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/tab_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginBottom="80dp"
                    android:layout_marginTop="?actionBarSize"
                    android:id="@+id/rcv_chat_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </androidx.viewpager.widget.ViewPager>
        <com.colorsms.style.views.CircleIndicator
            android:id="@+id/circle_indicator"
            android:layout_above="@+id/bt_apply"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <Button
            android:textAllCaps="false"
            android:id="@+id/bt_apply"
            android:textColor="#FFFFFF"
            android:text=""
            android:background="@drawable/bg_save"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="?android:selectableItemBackground"
            android:tint="#fff"
            android:padding="18dp"
            android:src="@drawable/ic_back"
            android:id="@+id/bt_back"
            android:layout_width="60dp"
            android:layout_height="?actionBarSize"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:text="Background"
            android:layout_toEndOf="@+id/bt_back"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />
    </RelativeLayout>
</RelativeLayout>
