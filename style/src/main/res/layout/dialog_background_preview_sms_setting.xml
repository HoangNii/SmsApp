<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/view_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="45dp"
                    android:layout_gravity="center"
                    android:id="@+id/rcv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.colorsms.style.views.colorpicker.ColorPickerView
                    android:visibility="gone"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="45dp"
                    android:layout_gravity="center"
                    android:id="@+id/color_picker_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cpv_alphaChannelVisible="true" />
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/bt_custom_color"
                    android:layout_gravity="end|bottom"
                    android:textColor="@color/colorPrimary"
                    android:text="Customs"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"/>
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:layout_margin="20dp"
                android:id="@+id/view_background_alpha"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <SeekBar
                    android:id="@+id/sb_background_alpha"
                    android:progress="50"
                    android:max="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>